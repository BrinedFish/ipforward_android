<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_cfg"
        android:orientation="vertical" android:background="#CCC"
        tools:context=".cfg">

    <RelativeLayout
            android:layout_width="match_parent" android:background="#FFF" android:layout_marginBottom="2dp"
            android:layout_height="48dp">
        <TextView
                android:text="服务器地址："
                android:layout_width="wrap_content" android:gravity="center"
                android:layout_height="match_parent" android:id="@+id/edit_api_addr_label"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text=""
                android:hint="@string/text_default"
                android:layout_toRightOf="@id/edit_api_addr_label"
                android:layout_alignParentRight="true"
                android:ems="10"
                android:id="@+id/edit_api_addr" android:layout_toEndOf="@id/edit_api_addr_label" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <RelativeLayout android:visibility="gone"
            android:layout_width="match_parent" android:background="#FFF" android:layout_marginBottom="2dp"
            android:layout_height="30dp">

        <TextView
                android:text="TextView"
                android:layout_width="wrap_content" android:gravity="center"
                android:layout_height="match_parent" android:id="@+id/textView2"/>
    </RelativeLayout>
    <RelativeLayout android:visibility="gone"
            android:layout_width="match_parent" android:background="#FFF" android:layout_marginBottom="2dp"
            android:layout_height="30dp">

        <TextView
                android:text="TextView"
                android:layout_width="wrap_content" android:gravity="center"
                android:layout_height="match_parent" android:id="@+id/textView3"/>
    </RelativeLayout>
    <RelativeLayout android:visibility="gone"
            android:layout_width="match_parent" android:background="#FFF" android:layout_marginBottom="2dp"
            android:layout_height="30dp">
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content" android:gravity="center"
                android:layout_height="match_parent" android:id="@+id/textView4"/>
    </RelativeLayout>

</LinearLayout>